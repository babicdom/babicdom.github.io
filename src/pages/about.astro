                        institution="Faculty of Electrical Engineering and Computing, University of Zagreb, Croatia" 
                        degree="MSc in Computer Science" 
                        specialization="Artificial Intelligence and Computer Vision"
                        list={["Excelled academically, placing in the top 2% of students in the generation with a GPA of 4.79/5.0.", "Relevant courses: Machine Learning, Pattern Recognition, Computer Vision, Deep Learning etc"]}
                        startDate="2023"
                        endDate="2025"
                    />
                    <InfoCard 
                        institution="KTH Royal Institute of Technology, Sweden" 
                        degree="MSc in Computer Science - Exchange"
                        list={["Collaborated on a reproducibility research paper: An in-depth exploration of Finite Scalar Quantization with VAEs.", "Relevant courses: Deep Learning Advanced, Security in Computer Systems, Reinforcement Learning etc."]}
                        startDate="2024"
                        endDate="2025"
                    />
                    <InfoCard 
                        institution="Faculty of Electrical Engineering and Computing, University of Zagreb, Croatia" 
                        degree="BSc in Computer Science"
                        list={["Ranked in the top 5% of students in the generation with a GPA of 4.54/5.0.", "Bachelor's Thesis awarded with the highest grade for the research on: Vector Quantized Variational Autoencoder - VQVAE."]}
                        startDate="2020"
                        endDate="2023"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Skills Section -->
    <section class="mb-16">
        <h2 class="text-3xl font-bold mb-8 text-center fade-in-up">Technical Skills</h2>
        <div class="grid md:grid-cols-2 gap-8">
            <!-- Technical Skills -->
            <div class="fade-in-up bg-gray-800/30 backdrop-blur-sm p-6 rounded-2xl border border-gray-700/50 hover:border-blue-500/30 transition-all duration-300">
                <h3 class="text-xl font-semibold mb-4 text-blue-400">AI & Machine Learning</h3>
                <div class="space-y-3">
                    <div class="flex items-center gap-3">
                        <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                        <span class="text-gray-300">Deep Learning & Neural Networks</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <div class="w-2 h-2 bg-blue-400 rounded-full"></div>

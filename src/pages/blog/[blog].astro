---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Comments from "../../components/Comments.astro";
import { getCollection, getEntryBySlug } from "astro:content";

export async function getStaticPaths() {
  const blogs = await getCollection("blog");
  return blogs.map((blog) => ({
    params: { blog: blog.slug },
  }));
}

const { blog } = Astro.params;
const blogData = await getEntryBySlug("blog", blog);
const { Content } = await blogData.render();
---

<BaseLayout title={blogData.data.title}>
    <div class="mb-8">
        <h1 class="text-4xl font-bold mb-4">{blogData.data.title}</h1>
        
        <div class="flex flex-wrap items-center gap-4 mb-4">
            {blogData.data.date && (
                <time class="text-gray-400 text-sm flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    {blogData.data.date}
                </time>
            )}
        </div>
    </div>
    
    <article class="prose prose-invert mt-6 max-w-none">
      <Content />
    </article>
    
    <Comments title={blogData.data.title} />
</BaseLayout>

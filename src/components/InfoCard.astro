---
export interface Props {
    institution?: string;
    degree?: string;
    specialization?: string;
    description?: string;
    startDate?: string;
    endDate?: string;
}

const { institution = "University of Zagreb, Croatia", degree = "Master of Science in Computer Science", specialization, description = "Focused on advanced machine learning algorithms, deep learning architectures, and their applications in computer vision and cybersecurity. Completed thesis work on cutting-edge AI research with practical implementations.", startDate = "2022", endDate = "2024" } = Astro.props;
---
<div class="grow">
    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-2">
        <h3 class="text-xl font-semibold text-blue-400">{degree}</h3>
        <span class="text-gray-400 text-sm mt-1 sm:mt-0 font-medium">{startDate} - {endDate}</span>
    </div>
    <p class="text-gray-300 font-medium mb-1">{institution}</p>
    {specialization && <p class="text-gray-400 text-sm mb-3">Specialization in {specialization}</p>}
    <p class="text-gray-300 text-sm leading-relaxed">
        {description}
    </p>
</div>
---
export interface Props {
    title: string;
    description: string;
    link?: string;
    img?: string;
    tags?: string[];
    github?: string;
    hasDetailPage?: boolean;
    slug?: string;
}

const { title, description, link, img, tags, github, hasDetailPage, slug } = Astro.props;
---
<div class="group relative bg-gray-800/50 backdrop-blur-sm p-6 border border-gray-700/50 rounded-2xl hover:border-blue-500/50 hover:bg-gray-800/80 transition-all duration-300 hover:shadow-xl hover:shadow-blue-500/5 hover:-translate-y-1">
    {img && (
        <div class="mb-4 overflow-hidden rounded-xl">
            <img 
                src={img} 
                alt={title} 
                class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
            />
        </div>
    )}

    <!-- Title section -->
    <div class="mb-3">
        <h3 class="text-xl font-bold group-hover:text-blue-400 transition-colors duration-200">{title}</h3>
    </div>

    <p class="text-gray-400 mb-4 leading-relaxed">{description}</p>
    
    {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-4">
            {tags.map((tag) => (
                <span class="px-2 py-1 text-xs bg-blue-500/10 text-blue-400 rounded-full border border-blue-500/20">
                    {tag}
                </span>
            ))}
        </div>
    )}
    
    <!-- Action buttons -->
    <div class="flex items-center justify-between pt-2">
        <div class="flex items-center gap-3">
            {github && (
                <a 
                    href={github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-3 py-2 bg-gray-700/50 hover:bg-gray-600/50 border border-gray-600/50 hover:border-blue-500/50 rounded-lg text-gray-300 hover:text-blue-400 transition-all duration-200 hover:scale-105"
                    title="View source code"
                >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-sm font-medium">Code</span>
                </a>
            )}
        </div>
        
        {hasDetailPage && link && (
            <a 
                href={link}
                class="inline-flex items-center gap-2 px-4 py-2 bg-blue-500/10 hover:bg-blue-500/20 border border-blue-500/30 hover:border-blue-500/50 rounded-lg text-blue-400 hover:text-blue-300 font-medium transition-all duration-200 hover:scale-105"
                title="Read more details"
            >
                <span>Read More</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
        )}
    </div>
</div>
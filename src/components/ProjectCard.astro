---
export interface Props {
    title: string;
    description: string;
    link?: string;
    img?: string;
}

const { title, description, link, img } = Astro.props;
---
<div class="p-6 border border-gray-800 rounded-xl  hover:border-blue-500 hover:shadow-lg transition-shadow ">
    <h3 class="text-xl mb-2 font-bold">{title}</h3>
    <p class="text-gray-400 mb-2">{description}</p>
    {img && <img src={img} alt={title} class="mb-4 rounded-lg" />}
    {link && (<a href={link} class="text-blue-400 hover:underline link-animate ripple px-2 py-1 rounded">View â†’</a>)}
</div>
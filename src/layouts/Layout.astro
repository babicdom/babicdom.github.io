---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body>
    <header>
        <div class="container">
            <div class="header-title">
                <img src="/assets/img/cv_nova_small.jpg" alt="Profile image" />
                <h1>Dominik Babic</h1>
            </div>
            <nav>
                <a href="#about">About</a>
                <a href="#projects">Projects</a>
                <a href="#contact">Contact</a>
            </nav>
        </div>
    </header>
    <main>
        <slot />
    </main>
    <footer>
        <div class="container">
            <p>&copy; 2025 Dominik Babic. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>

<style is:global>
/* Global styles */
body {
    font-family: 'Inter', Arial, sans-serif;
    margin: 0;
    background: #f7f8fa;
    color: #222;
}

header {
    background: #222;
    color: #fff;
    padding: 1rem 0;
}

header .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

nav a {
    color: #fff;
    text-decoration: none;
    margin-left: 2rem;
    font-weight: 500;
    transition: color 0.2s;
}

nav a:hover {
    color: #00bfae;
}

.container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
}

h1, h2, h3 {
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 1rem;
}

.project-card {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    padding: 1.5rem;
    transition: box-shadow 0.2s;
}

.project-card:hover {
    box-shadow: 0 4px 16px rgba(0,191,174,0.15);
}

footer {
    background: #222;
    color: #fff;
    text-align: center;
    padding: 1rem 0;
    font-size: 0.95rem;
    margin-top: 2rem;
}

/* Profile image styles */
.header-title {
    display: flex;
    align-items: center;
    gap: 1.5rem;
}

.header-title img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

@media (max-width: 600px) {
    .container {
        padding: 1rem 0.5rem;
    }
    header .container {
        flex-direction: column;
        align-items: flex-start;
    }
    nav a {
        margin-left: 1rem;
    }
    .projects-grid {
        grid-template-columns: 1fr;
    }
}
</style>
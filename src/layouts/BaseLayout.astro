---
const { title = "" } = Astro.props;
import "../styles/global.css"
---
<!DOCTYPE html>
<html lang="en" class="dark bg-gray-900 text-gray-100">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <style>
            /* Dynamic Background Waves */
            .dynamic-bg {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: -1;
                background: #111827; /* gray-900 base */
                overflow: hidden;
                will-change: transform;
                transform: translateZ(0);
                backface-visibility: hidden;
            }
            
            .dynamic-bg::before {
                content: '';
                position: absolute;
                width: 100%;
                height: 100%;
                background: 
                    radial-gradient(
                        ellipse 800px 400px at -400px -200px,
                        rgba(59, 130, 246, 0.20) 0%,
                        rgba(147, 51, 234, 0.15) 40%,
                        transparent 70%
                    ),
                    radial-gradient(
                        ellipse 600px 300px at calc(100% + 300px) -150px,
                        rgba(147, 51, 234, 0.18) 0%,
                        rgba(16, 185, 129, 0.12) 40%,
                        transparent 70%
                    );
                animation: wave-motion-edges 18s ease-in-out infinite;
                filter: blur(40px);
                top: 0;
                left: 0;
            }
            
            .dynamic-bg::after {
                content: '';
                position: absolute;
                width: 100%;
                height: 100%;
                background: 
                    radial-gradient(
                        ellipse 700px 350px at -350px calc(100% + 175px),
                        rgba(16, 185, 129, 0.16) 0%,
                        rgba(59, 130, 246, 0.12) 40%,
                        transparent 70%
                    ),
                    radial-gradient(
                        ellipse 500px 250px at calc(100% + 250px) calc(100% + 125px),
                        rgba(245, 101, 101, 0.14) 0%,
                        rgba(147, 51, 234, 0.10) 40%,
                        transparent 70%
                    );
                animation: wave-motion-edges 22s ease-in-out infinite reverse;
                filter: blur(40px);
                bottom: 0;
                right: 0;
                animation-delay: -11s;
            }
            
            @keyframes wave-motion-edges {
                0%, 100% { 
                    transform: translate3d(0, 0, 0) scale(1) rotate(0deg);
                    opacity: 0.5;
                }
                25% { 
                    transform: translate3d(-80px, -50px, 0) scale(1.15) rotate(3deg);
                    opacity: 0.9;
                }
                50% { 
                    transform: translate3d(100px, -60px, 0) scale(0.85) rotate(-2deg);
                    opacity: 1.0;
                }
                75% { 
                    transform: translate3d(-70px, 90px, 0) scale(1.1) rotate(2.5deg);
                    opacity: 0.8;
                }
            }
            
            /* Additional floating orbs */
            .floating-orb {
                position: fixed;
                border-radius: 50%;
                pointer-events: none;
                z-index: -1;
                filter: blur(40px);
                opacity: 0.4;
                will-change: transform;
                transform: translateZ(0);
                backface-visibility: hidden;
            }
            
            .orb-1 {
                width: 200px;
                height: 200px;
                background: linear-gradient(45deg, rgba(59, 130, 246, 0.12), rgba(147, 51, 234, 0.08));
                top: -50px;
                left: -50px;
                animation: float-1 20s ease-in-out infinite;
            }
            
            .orb-2 {
                width: 180px;
                height: 180px;
                background: linear-gradient(135deg, rgba(147, 51, 234, 0.1), rgba(16, 185, 129, 0.07));
                top: -40px;
                right: -40px;
                animation: float-2 25s ease-in-out infinite reverse;
            }
            
            .orb-3 {
                width: 160px;
                height: 160px;
                background: linear-gradient(225deg, rgba(16, 185, 129, 0.09), rgba(59, 130, 246, 0.06));
                bottom: -30px;
                right: -30px;
                animation: float-3 18s ease-in-out infinite;
            }
            
            @keyframes float-1 {
                0%, 100% { transform: translate3d(0, 0, 0) scale(1); }
                50% { transform: translate3d(30px, -20px, 0) scale(1.1); }
            }
            
            @keyframes float-2 {
                0%, 100% { transform: translate3d(0, 0, 0) scale(1); }
                50% { transform: translate3d(-40px, -30px, 0) scale(1.15); }
            }
            
            @keyframes float-3 {
                0%, 100% { transform: translate3d(0, 0, 0) scale(1); }
                50% { transform: translate3d(-25px, 30px, 0) scale(1.2); }
            }
            
            .orb-4 {
                width: 140px;
                height: 140px;
                background: linear-gradient(315deg, rgba(245, 101, 101, 0.08), rgba(147, 51, 234, 0.05));
                bottom: -35px;
                left: -35px;
                animation: float-4 23s ease-in-out infinite;
            }
            
            @keyframes float-4 {
                0%, 100% { transform: translate3d(0, 0, 0) scale(1); }
                50% { transform: translate3d(20px, -15px, 0) scale(1.05); }
            }
        </style>
    </head>
    <body class="min-h-screen flex flex-col relative">
        <!-- Dynamic Background -->
        <div class="dynamic-bg"></div>
        
        <!-- Floating Orbs -->
        <div class="floating-orb orb-1"></div>
        <div class="floating-orb orb-2"></div>
        <div class="floating-orb orb-3"></div>
        <div class="floating-orb orb-4"></div>
        <header class="sticky top-0 z-50 w-full py-4 bg-gray-800/90 backdrop-blur-md border-b border-gray-700/30 shadow-lg shadow-black/20 mb-8">
            <nav class="max-w-5xl mx-auto flex justify-between items-center px-4">
                <a href="/" class="text-xl font-bold px-5 py-2.5 bg-gray-800/60 border border-gray-700/50 rounded-lg hover:border-blue-400/50 hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300 backdrop-blur-sm bg-linear-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
                    Home Page
                </a>
                <div class="flex space-x-3">
                    <a href="/projects" class="px-5 py-2.5 bg-gray-800/60 border border-gray-700/50 rounded-lg hover:bg-linear-to-r hover:from-blue-600/20 hover:to-purple-600/20 hover:border-blue-400/50 hover:text-blue-300 hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300 font-medium backdrop-blur-sm">Projects</a>
                    <a href="/blog" class="px-5 py-2.5 bg-gray-800/60 border border-gray-700/50 rounded-lg hover:bg-linear-to-r hover:from-blue-600/20 hover:to-purple-600/20 hover:border-blue-400/50 hover:text-blue-300 hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300 font-medium backdrop-blur-sm">Blogs</a>
                    <a href="/about" class="px-5 py-2.5 bg-gray-800/60 border border-gray-700/50 rounded-lg hover:bg-linear-to-r hover:from-blue-600/20 hover:to-purple-600/20 hover:border-blue-400/50 hover:text-blue-300 hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300 font-medium backdrop-blur-sm">About</a>
                </div>
            </nav>
        </header>
        <main class="flex-1 max-w-5xl mx-auto w-full px-4 py-5">
            <slot />
        </main>
        <footer class="py-6 text-center border-t border-gray-800">
            <p class="text-sm text-gray-500">© {new Date().getFullYear()} Dominik Babić</p>
        </footer>
        <script>
            // Enhanced click animations for links
            document.addEventListener('DOMContentLoaded', function() {
                const links = document.querySelectorAll('a');
                
                links.forEach(link => {
                    link.addEventListener('click', function(e) {
                        // Create a temporary visual feedback
                        this.style.transform = 'scale(0.95)';
                        this.style.filter = 'brightness(0.8)';
                        
                        setTimeout(() => {
                            this.style.transform = '';
                            this.style.filter = '';
                        }, 150);
                        
                        // Add a subtle bounce animation
                        this.classList.add('animate-bounce-gentle');
                        setTimeout(() => {
                            this.classList.remove('animate-bounce-gentle');
                        }, 1000);
                    });
                });
                
                // Initialize fade-in animations after DOM is ready
                const fadeElements = document.querySelectorAll('.fade-in-up');
                fadeElements.forEach(element => {
                    // Force a reflow to ensure initial styles are applied
                    (element as HTMLElement).offsetHeight;
                });
            });
        </script>
    </body>
</html>
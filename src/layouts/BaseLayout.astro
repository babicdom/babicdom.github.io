---
const { title = "" } = Astro.props;
import "../styles/global.css"
---
<!DOCTYPE html>
<html lang="en" class="dark bg-gray-900 text-gray-100">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <style>
            /* Dynamic Background Waves */
            .dynamic-bg {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: -1;
                background: #111827; /* gray-900 base */
                overflow: hidden;
            }
            
            .dynamic-bg::before {
                content: '';
                position: absolute;
                width: 100%;
                height: 100%;
                background: 
                    radial-gradient(
                        ellipse 800px 400px at -400px -200px,
                        rgba(59, 130, 246, 0.08) 0%,
                        rgba(147, 51, 234, 0.05) 40%,
                        transparent 70%
                    ),
                    radial-gradient(
                        ellipse 600px 300px at calc(100% + 300px) -150px,
                        rgba(147, 51, 234, 0.06) 0%,
                        rgba(16, 185, 129, 0.04) 40%,
                        transparent 70%
                    );
                animation: wave-motion-edges 18s ease-in-out infinite;
                filter: blur(80px);
                top: 0;
                left: 0;
            }
            
            .dynamic-bg::after {
                content: '';
                position: absolute;
                width: 100%;
                height: 100%;
                background: 
                    radial-gradient(
                        ellipse 700px 350px at -350px calc(100% + 175px),
                        rgba(16, 185, 129, 0.07) 0%,
                        rgba(59, 130, 246, 0.05) 40%,
                        transparent 70%
                    ),
                    radial-gradient(
                        ellipse 500px 250px at calc(100% + 250px) calc(100% + 125px),
                        rgba(245, 101, 101, 0.05) 0%,
                        rgba(147, 51, 234, 0.04) 40%,
                        transparent 70%
                    );
                animation: wave-motion-edges 22s ease-in-out infinite reverse;
                filter: blur(80px);
                bottom: 0;
                right: 0;
                animation-delay: -11s;
            }
            
            @keyframes wave-motion-edges {
                0%, 100% { 
                    transform: translateX(0) translateY(0) rotate(0deg) scale(1);
                    opacity: 0.7;
                }
                25% { 
                    transform: translateX(-20px) translateY(-25px) rotate(1deg) scale(1.05);
                    opacity: 0.9;
                }
                50% { 
                    transform: translateX(25px) translateY(-15px) rotate(-1deg) scale(0.95);
                    opacity: 0.8;
                }
                75% { 
                    transform: translateX(-15px) translateY(20px) rotate(0.5deg) scale(1.02);
                    opacity: 0.85;
                }
            }
            
            /* Additional floating orbs */
            .floating-orb {
                position: fixed;
                border-radius: 50%;
                pointer-events: none;
                z-index: -1;
                filter: blur(40px);
                opacity: 0.4;
            }
            
            .orb-1 {
                width: 200px;
                height: 200px;
                background: linear-gradient(45deg, rgba(59, 130, 246, 0.12), rgba(147, 51, 234, 0.08));
                top: -50px;
                left: -50px;
                animation: float-1 20s ease-in-out infinite;
            }
            
            .orb-2 {
                width: 180px;
                height: 180px;
                background: linear-gradient(135deg, rgba(147, 51, 234, 0.1), rgba(16, 185, 129, 0.07));
                top: -40px;
                right: -40px;
                animation: float-2 25s ease-in-out infinite reverse;
            }
            
            .orb-3 {
                width: 160px;
                height: 160px;
                background: linear-gradient(225deg, rgba(16, 185, 129, 0.09), rgba(59, 130, 246, 0.06));
                bottom: -30px;
                right: -30px;
                animation: float-3 18s ease-in-out infinite;
            }
            
            @keyframes float-1 {
                0%, 100% { transform: translate(0, 0) scale(1); }
                33% { transform: translate(50px, -30px) scale(1.2); }
                66% { transform: translate(-40px, 40px) scale(0.8); }
            }
            
            @keyframes float-2 {
                0%, 100% { transform: translate(0, 0) scale(1); }
                50% { transform: translate(-60px, -50px) scale(1.3); }
            }
            
            @keyframes float-3 {
                0%, 100% { transform: translate(0, 0) scale(1); }
                25% { transform: translate(40px, -25px) scale(0.7); }
                75% { transform: translate(-30px, 45px) scale(1.4); }
            }
            
            .orb-4 {
                width: 140px;
                height: 140px;
                background: linear-gradient(315deg, rgba(245, 101, 101, 0.08), rgba(147, 51, 234, 0.05));
                bottom: -35px;
                left: -35px;
                animation: float-4 23s ease-in-out infinite;
            }
            
            @keyframes float-4 {
                0%, 100% { transform: translate(0, 0) scale(1); }
                33% { transform: translate(35px, -20px) scale(1.1); }
                66% { transform: translate(-25px, 30px) scale(0.9); }
            }
        </style>
    </head>
    <body class="min-h-screen flex flex-col relative">
        <!-- Dynamic Background -->
        <div class="dynamic-bg"></div>
        
        <!-- Floating Orbs -->
        <div class="floating-orb orb-1"></div>
        <div class="floating-orb orb-2"></div>
        <div class="floating-orb orb-3"></div>
        <div class="floating-orb orb-4"></div>
        <header class="sticky top-0 z-50 w-full py-4 bg-gray-800/90 backdrop-blur-md border-b border-gray-700/30 shadow-lg shadow-black/20 mb-8">
            <nav class="max-w-5xl mx-auto flex justify-between items-center px-4">
                <a href="/" class="text-xl font-bold bg-linear-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent hover:from-blue-300 hover:to-purple-300 hover:enhance transition-all duration-300 px-2 py-1 rounded-lg">
                    Home Page
                </a>
                <div class="flex space-x-2">
                    <a href="/projects" class="px-4 py-2 rounded-full hover:bg-gray-800/50 hover:text-blue-400 transition-all duration-200 font-medium">Projects</a>
                    <a href="/blog" class="px-4 py-2 rounded-full hover:bg-gray-800/50 hover:text-blue-400 transition-all duration-200 font-medium">Blogs</a>
                    <a href="/about" class="px-4 py-2 rounded-full hover:bg-gray-800/50 hover:text-blue-400 transition-all duration-200 font-medium">About</a>
                </div>
            </nav>
        </header>
        <main class="flex-1 max-w-5xl mx-auto w-full px-4 py-5 fade-in-up">
            <slot />
        </main>
        <footer class="py-6 text-center border-t border-gray-800">
            <p class="text-sm text-gray-500">© {new Date().getFullYear()} Dominik Babić</p>
        </footer>
        <script>
            // Enhanced click animations for links
            document.addEventListener('DOMContentLoaded', function() {
                const links = document.querySelectorAll('a');
                
                links.forEach(link => {
                    link.addEventListener('click', function(e) {
                        // Create a temporary visual feedback
                        this.style.transform = 'scale(0.95)';
                        this.style.filter = 'brightness(0.8)';
                        
                        setTimeout(() => {
                            this.style.transform = '';
                            this.style.filter = '';
                        }, 150);
                        
                        // Add a subtle bounce animation
                        this.classList.add('animate-bounce-gentle');
                        setTimeout(() => {
                            this.classList.remove('animate-bounce-gentle');
                        }, 1000);
                    });
                });
            });
        </script>
    </body>
</html>